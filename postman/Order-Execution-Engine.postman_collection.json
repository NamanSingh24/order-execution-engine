              "name": "Get Order - Not Found Example",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/api/orders/00000000-0000-0000-0000-000000000000",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "orders", "00000000-0000-0000-0000-000000000000"]
                }
              },
              "status": "Not Found",
              "code": 404,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
