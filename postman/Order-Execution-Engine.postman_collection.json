              ],
              "body": "{\n  \"statusCode\": 404,\n  \"error\": \"Not Found\",\n  \"message\": \"Order not found\"\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Health",
      "description": "System health and monitoring endpoints",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Test response status",
                  "pm.test('Status code is 200', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "// Test response time",
                  "pm.test('Response time is less than 500ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});",
                  "",
                  "// Test health status",
                  "pm.test('System status is healthy', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('healthy');",
                  "});",
                  "",
                  "// Test services",
                  "pm.test('Database is connected', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.services.database).to.equal('connected');",
                  "});",
                  "",
                  "pm.test('Queue is operational', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.services.queue).to.equal('operational');",
                  "});",
                  "",
                  "// Test queue metrics",
                  "pm.test('Queue metrics are present', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('queueMetrics');",
                  "    pm.expect(jsonData.queueMetrics).to.have.property('waiting');",
                  "    pm.expect(jsonData.queueMetrics).to.have.property('active');",
                  "    pm.expect(jsonData.queueMetrics).to.have.property('completed');",
                  "    pm.expect(jsonData.queueMetrics).to.have.property('failed');",
                  "});",
                  "",
                  "// Test WebSocket info",
                  "pm.test('WebSocket info is present', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('websocket');",
                  "    pm.expect(jsonData.websocket).to.have.property('activeConnections');",
                  "});",
                  "",
                  "// Log queue metrics",
                  "const jsonData = pm.response.json();",
                  "console.log('Queue Metrics:', JSON.stringify(jsonData.queueMetrics, null, 2));",
                  "console.log('Active WebSocket Connections:', jsonData.websocket.activeConnections);",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
